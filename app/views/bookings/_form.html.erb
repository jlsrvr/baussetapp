<%= simple_form_for [setters[:location], setters[:booking]] do |f| %>
  <%= f.input :start_date %> <!-- use datepicker on here -->
  <%= f.input :end_date %>
  <%= f.input :place, class: "" %> <!-- make this a slider -->
  <%= f.input :message %>
  <%= f.submit "Make Booking", class: "btn btn-primary" %>
<% end %>
<% if setters[:location] %>
  <%= link_to "Annuler", location_path(setters[:location]) %>
<% else %>
  <%= link_to "Annuler", bookings_path %>
<% end %>

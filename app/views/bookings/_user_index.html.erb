<%= content_for(:navbar_title, "Mes Demandes") %>
<% if !@bookings.where(status: "declined").empty? %>
  <h3>Refuser</h3>
  <% @bookings.each do |booking| %>
    <% if booking.status == "declined" %>
      <%= render "user_card", booking: booking %>
    <% end %>
  <% end %>
<% end %>
<% if !@bookings.where(status: "pending").empty? %>
  <h3>En Attente</h3>
  <% @bookings.each do |booking| %>
    <% if booking.status == "pending" %>
        <%= render "user_card", booking: booking %>
    <% end %>
  <% end %>
<% end %>
<% if !@bookings.where(status: "accepted").empty? %>
  <h3>Accepter</h3>
  <% @bookings.each do |booking| %>
    <% if booking.status == "accepted" %>
        <%= render "user_card", booking: booking %>
    <% end %>
  <% end %>
<% end %>

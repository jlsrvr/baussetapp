<div class="container">
  <div class="row justify-content-center">
    <div class="col-xs-12 col-sm-8">
      <div class="form-post">
        <h2>Attribution des lits</h2>
        <p id="bed-counter"><%= @booking.place %></p>
          <form class="simple_form add_beds" id="add_beds_<%= @booking.id %>" novalidate="novalidate" action="/bookings/<%= @booking.id %>/add_beds" accept-charset="UTF-8" method="post">
            <input type="hidden" name="_method" value="patch">
            <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
            <div class="bed-choices">
              <% @booking.location.beds.each do |bed| %>
                <input type="checkbox" class="hidden" value="<%= bed.id %>" name="booking[bed_ids]ids[]" id="booking_bed_ids_<%= bed.id %>">
                <label for="booking_bed_ids_<%= bed.id %>" class="bed-choice">
                  <%= bed.name %>
                </label>
              <% end %>
            </div>
            <input value="Attribuer" type="submit" class="btn home-btn" data-disable-with="Save">
          </form>
      </div>
    </div>
  </div>
</div>

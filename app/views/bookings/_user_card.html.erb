<div class="user-card">
  <div class="picture-area" style="background-image: linear-gradient(rgba(0, 0, 0, 0.44), rgba(0, 0, 0, 0.44)), url(<%= image_url('photo-appart.jpg') %>); background-size: cover">
    <div class="pic-text">
      <p>
        <%if booking.status == "accepted" %>
          Accepter
        <% elsif booking.status == "pending" %>
          En Attente
        <% else %>
          Refuser
        <% end %>
      </p>
    </div>
  </div>
  <div class="user-card-text">
    <div class="dates">
      <div class="date">
        <p>Du: <%= booking.start_date.strftime('%a %d %b') %></p>
      </div> <!-- end date -->
      <div class="date">
        <p>Au: <%= booking.end_date.strftime('%a %d %b') %></p>
      </div> <!-- end date -->
    </div> <!-- end dates -->
    <div class="lits-user-card">
      <% if booking.status == "accepted" %>
        <div class="message-user-accepter" id="dropdownlits" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
          <p>Tes lits</p>
          <i class="fas fa-angle-down"></i>
        </div>
        <div class="dropdown-lits dropdown-menu" aria-labelledby="dropdownlits">
          <% booking.beds.each do |bed| %>
            <div class="lit">
              <%= bed.name %>
            </div> <!-- end lit -->
          <% end %>
        </div> <!-- end dropdown-lits dropdown-menu -->
      <% else %>
        <p class="message-user">Tu n'as pas encore de lit</p>
      <% end %>
    </div> <!-- end lits-user-card -->
    <div class="btn-card btn-modify">
      <%= link_to "Modifier", edit_booking_path(booking) %>
    </div><!-- end btn-card btn-modify -->
  </div><!-- end user-card-text -->
</div><!-- end user-card -->

<h1>Les Demandes de Reservation</h1>

<h3>En Attente</h3>
<div class="bookings-scroll">
  <% @bookings.each do |booking| %>
    <% if booking.status == "pending" %>
        <%= render "admin_card", booking: booking %>
    <% end %>
  <% end %>
</div>
<h3>Accepter</h3>
<div class="bookings-scroll">
  <% @bookings.each do |booking| %>
    <% if booking.status == "accepted" %>
        <%= render "admin_card", booking: booking %>
    <% end %>
  <% end %>
</div>
<h3>Refuser</h3>
<div class="bookings-scroll">
  <% @bookings.each do |booking| %>
    <% if booking.status == "declined" %>
      <%= render "admin_card", booking: booking %>
    <% end %>
  <% end %>
</div>
